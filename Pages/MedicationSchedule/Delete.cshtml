@page "{id:int}"
@model MyMedCalendar.Pages.MedicationSchedule.DeleteModel
@{
    ViewData["Title"] = "Delete Medication Schedule";
}

<h2>Delete Medication Schedule</h2>

<p>Are you sure you want to delete this schedule?</p>

<form method="post">
    <input asp-for="MedicationSchedule.Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Patient/Main" class="btn btn-secondary">Cancel</a>
</form>
