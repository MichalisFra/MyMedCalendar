@page
@model MyMedCalendar.Pages.MedicationSchedule.CreateModel
@{
    ViewData["Title"] = "Create Medication Schedule";
}

<h2>Create Medication Schedule</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="MedicationSchedule.DrugId" class="control-label">Select Drug</label>
        <select asp-for="MedicationSchedule.DrugId" class="form-control" asp-items="Model.DrugOptions">
            @if (Model.DrugOptions?.Any() == true)
            {
                <option value="">-- Select a Drug --</option>
            }
            else
            {
                <option value="">No drugs available</option>
            }
        </select>
        <span asp-validation-for="MedicationSchedule.DrugId" class="text-danger"></span>


        <span asp-validation-for="MedicationSchedule.DrugId" class="text-danger"></span>
        <span asp-validation-for="MedicationSchedule.DrugId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicationSchedule.Dosage" class="control-label">Dosage (mg)</label>
        <input asp-for="MedicationSchedule.Dosage" class="form-control" />
        <span asp-validation-for="MedicationSchedule.Dosage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicationSchedule.FrequencyPerWeek" class="control-label">Frequency (times per week)</label>
        <input asp-for="MedicationSchedule.FrequencyPerWeek" class="form-control" type="number" />
        <span asp-validation-for="MedicationSchedule.FrequencyPerWeek" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicationSchedule.StartDate" class="control-label">Start Date</label>
        <input asp-for="MedicationSchedule.StartDate" class="form-control" type="date"
               value="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="MedicationSchedule.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicationSchedule.EndDate" class="control-label">End Date</label>
        <input asp-for="MedicationSchedule.EndDate" class="form-control" type="date"
               value="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="MedicationSchedule.EndDate" class="text-danger"></span>
    </div>

   <div class="mt-2">
        <button type="submit" class="btn btn-primary">Create Schedule</button>
        <a asp-page="/Patient/Main" class="btn btn-secondary">Cancel</a>
   </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
